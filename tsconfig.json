{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@theme/*": [
        "./packages/@starzkg/vuepress-theme-star/src/client/components/*"
      ],
      "@internal/*": [
        "./packages/@starzkg/vuepress-theme-star/src/client/internal/*.d.ts"
      ]
    },
    "types": ["webpack-env", "vite/client"]
  },
  "include": [
    "**/.vuepress/**/*",
    "ecosystem/**/*",
    "packages/**/*",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", ".temp", "lib", "dist"]
}
