{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "types": ["jest", "@types/jest", "node", "vite/client"]
  }
}
