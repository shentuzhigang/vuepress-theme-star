{
  "private": true,
  "workspaces": [
    "packages/@starzkg/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "lerna run clean --stream",
    "copy": "lerna run copy --stream",
    "copy-watch": "lerna run copy --parallel -- --watch",
    "dev": "yarn copy-watch | yarn build --watch",
    "docs:build": "vuepress build docs --clean-cache",
    "docs:clean": "rimraf docs/.vuepress/.temp docs/.vuepress/.cache docs/.vuepress/dist",
    "docs:dev": "vuepress dev docs --clean-cache",
    "docs:release": "yarn copy && yarn build && yarn docs:build",
    "docs:serve": "anywhere -h localhost -d docs/.vuepress/dist",
    "example:build": "vuepress build example --clean-cache",
    "example:clean": "rimraf example/.vuepress/.temp example/.vuepress/.cache example/.vuepress/dist",
    "example:dev": "vuepress dev example --clean-cache",
    "example:release": "yarn copy && yarn build && yarn example:build",
    "example:serve": "anywhere -h localhost -d example/.vuepress/dist",
    "lint": "eslint --ext .js,.ts,.vue .",
    "prepare": "husky install",
    "rebuild": "yarn clean && yarn copy && yarn build",
    "release": "yarn lint && yarn clean && yarn copy && yarn build && lerna publish prerelease --dist-tag beta",
    "test": "jest --runInBand",
    "test:coverage": "yarn copy && yarn build && yarn test --coverage"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,yml,css,scss}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "prettier-config-vuepress",
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/plugin-transform-modules-commonjs": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@rollup/plugin-typescript": "8.3.0",
    "@starzkg/vuepress-plugin-baidu-analytics": "1.0.0",
    "@types/jest": "^27.0.2",
    "@vuepress/plugin-debug": "^2.0.0-beta.27",
    "@vuepress/plugin-docsearch": "^2.0.0-beta.27",
    "@vuepress/plugin-google-analytics": "^2.0.0-beta.27",
    "@vuepress/plugin-register-components": "^2.0.0-beta.27",
    "@vuepress/plugin-shiki": "^2.0.0-beta.27",
    "anywhere": "^1.5.0",
    "cpx2": "^3.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-vuepress": "^3.4.0",
    "eslint-config-vuepress-typescript": "^2.4.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-serializer-vue": "^2.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "2.2.1",
    "prettier-config-vuepress": "^1.2.0",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.52.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "vuepress": "^2.0.0-beta.27",
    "vuepress-vite": "^2.0.0-beta.27"
  }
}
